<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myimchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
   

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light">
        
        <activity
            android:name="com.example.myimchat.Splash"
            android:label="@string/app_name" >
           
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.myimchat.Logi"
            android:label="@string/login" >
        </activity>
        <activity
            android:name="com.example.myimchat.RegisterUser"
            android:label="@string/register" >
        </activity>
        <activity
            android:name="com.example.myimchat.Client"
            android:label="@string/chat" >
        </activity>
        <activity
            android:name="com.example.myimchat.FriendsList"
            android:label="@string/friends_list">
        </activity>
        <activity
            android:name="com.example.myimchat.AddFriend"
            android:label="@string/add_friend" >
        </activity>
        <activity
            android:name="com.example.myimchat.Connect"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.myimchat.RemoveFriend"
            android:label="@string/delete" >
        </activity>
        <activity
            android:name="com.example.myimchat.ConnFromNotification"
            android:label="@string/app_name" >
        </activity>
    </application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
</manifest>
